pipeline {
    agent any
    
    tools {
        maven 'maven-3'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/nourhanosma47/iVolve-training.git'
            }
        }

        stage('Build & Push Image (using Jib)') {
            steps {
                // بننادي الـ credentials بتاعة Docker Hub
                withCredentials([usernamePassword(credentialsId: 'dockerhub-id', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    // السطر اللي جاي ده هو اللي كان ناقص عشان يدخل الفولدر اللي فيه الكود
                    dir('argocd') { 
                        script {
                            // بناء الصورة ورفعها مباشرة برقم الـ Build الحالي
                            sh "mvn compile jib:build -Dimage=docker.io/nourhanosama/jenkins-app:${env.BUILD_NUMBER} -Djib.to.auth.username=${DOCKER_USERNAME} -Djib.to.auth.password=${DOCKER_PASSWORD}"
                        }
                    }
                }
            }
        }
        stage('Update Manifest') {
    steps {
        script {
            // بنستخدم credentials للـ Git عشان نقدر نعمل Push للتغيير
            withCredentials([usernamePassword(credentialsId: 'github-token-secret', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                
                // 1. تغيير الـ Image Tag في ملف الـ deployment.yaml
                // بنستخدم sed عشان ندور على اسم الصورة ونحدث الـ Tag للرقم الجديد
                sh "sed -i 's|nourhanosama/jenkins-app:.*|nourhanosama/jenkins-app:${env.BUILD_NUMBER}|g' argocd/deployment.yaml"
                
                // 2. عمل Commit و Push للتغييرات
                sh """
                    git config user.email "jenkins@example.com"
                    git config user.name "Jenkins CI"
                    git add argocd/deployment.yaml
                    git commit -m 'Update image tag to ${env.BUILD_NUMBER}'
                    git push https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/nourhanosama47/iVolve-training.git HEAD:main
                """
                    }
                }    
            }
        }
        
    }
}
