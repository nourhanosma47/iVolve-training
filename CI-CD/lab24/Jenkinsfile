            }
        }

        stage('Deploy to K8s â›µ') {
            steps {
                withKubeConfig([credentialsId: "${env.K8S_CREDS_ID}"]) { 
                    echo "Deploying to Namespace: ${K8S_NAMESPACE} ğŸ—ï¸"
                    
