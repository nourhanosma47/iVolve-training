        }
        failure {
            echo 'ÙØ´Ù„ Ø§Ù„Ù€ PipelineØŒ ÙŠØ±Ø¬Ù‰ Ù…Ø±Ø§Ø¬Ø¹Ø© Ø§Ù„Ù€ Logs. âŒ'
        }
    }
