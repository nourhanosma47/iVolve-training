pipeline {
    agent any

    environment {
        // Ø¨ÙŠØ§Ù†Ø§Øª Docker Hub - ØªØ£ÙƒØ¯ÙŠ Ù…Ù† Ø§Ø³ØªØ¨Ø¯Ø§Ù„ Ø§Ø³Ù… Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…
        DOCKER_HUB_USER = 'your-docker-username' 
        IMAGE_NAME      = 'jenkins-app'
        IMAGE_TAG       = "${env.BUILD_NUMBER}"
        DOCKER_CREDS_ID = 'docker-hub-creds'
    }

    stages {
        stage('1. Clone Source Code') {
            steps {
                git 'https://github.com/Ibrahim-Adel15/Jenkins_App.git'
            }
        }

        stage('2. Run Unit Test') {
            steps {
                // ØªÙ†ÙÙŠØ° Ø§Ù„Ø§Ø®ØªØ¨Ø§Ø±Ø§Øª Ø¨Ø§Ø³ØªØ®Ø¯Ø§Ù… Maven Ø¨Ù†Ø§Ø¡Ù‹ Ø¹Ù„Ù‰ Ù…Ù„Ù pom.xml
                sh 'mvn test'
            }
        }

