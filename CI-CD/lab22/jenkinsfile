            steps {
                echo 'Ø¬Ø§Ø±ÙŠ Ø³Ø­Ø¨ Ø§Ù„ÙƒÙˆØ¯... ğŸ“¥'
                git branch: 'main', url: 'https://github.com/Ibrahim-Adel15/Jenkins_App.git'
