pipeline {
    agent any

    environment {
        // ğŸš¨ ØªØ£ÙƒØ¯ÙŠ Ù…Ù† ØªØºÙŠÙŠØ± Ø§Ø³Ù… Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù… Ù‡Ù†Ø§ Ù„Ø§Ø³Ù… Ø­Ø³Ø§Ø¨Ùƒ ÙÙŠ Docker Hub
        DOCKER_HUB_USER = 'your-docker-username' 
        IMAGE_NAME      = 'jenkins-app'
        IMAGE_TAG       = "${env.BUILD_NUMBER}"
        DOCKER_CREDS_ID = 'docker-hub-creds'
    }

    stages {
        stage('1. Clone Source Code') {
            steps {
                // Ù‚Ù…Ù†Ø§ Ø¨ØªØ­Ø¯ÙŠØ¯ Ø§Ù„ÙØ±Ø¹ 'main' Ù‡Ù†Ø§ Ù„ØªØ¬Ù†Ø¨ Ø§Ù„Ø®Ø·Ø£ Ø§Ù„Ø³Ø§Ø¨Ù‚
                git branch: 'main', url: 'https://github.com/Ibrahim-Adel15/Jenkins_App.git'
            }
        }

        stage('2. Run Unit Test') {
            steps {
                echo 'Running Unit Tests... ğŸ§ª'
                sh 'mvn test'
            }
        }

        stage('3. Build App') {
            steps {
                echo 'Building Application... ğŸ—ï¸'
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('4. Build Docker image') {
            steps {
                echo 'Building Docker Image... ğŸ³'
                sh "docker build -t ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }

        stage('5. Push image to Docker hub') {
            steps {
                echo 'Pushing Image to Docker Hub... ğŸš€'
                script {
                    withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDS_ID}", passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                        sh "echo ${PASS} | docker login -u ${USER} --password-stdin"
                        sh "docker push ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
                    }
                }
            }
        }

        stage('6. Delete image locally') {
            steps {
                echo 'Cleaning up local images... ğŸ§¹'
                sh "docker rmi ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
            }
        }

        stage('7. Edit deployment.yaml') {
            steps {
                echo 'Updating Deployment Manifest... ğŸ“'
                // ØªØ­Ø¯ÙŠØ« Ø§Ù„ØµÙˆØ±Ø© ÙˆØ§Ù„Ù€ Tag Ø¯Ø§Ø®Ù„ Ù…Ù„Ù Ø§Ù„Ù€ YAML
                sh "sed -i 's|image: .*|image: ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}|g' deployment.yaml"
            }
        }

        stage('8. Deploy to k8s cluster') {
            steps {
                echo 'Deploying to Kubernetes... â›µ'
                sh "kubectl apply -f deployment.yaml"
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished execution.'
        }
        success {
            echo 'Application Deployed Successfully! ğŸ‰'
        }
        failure {
            echo 'Pipeline Failed. Please check logs. âŒ'
        }
    }
}
