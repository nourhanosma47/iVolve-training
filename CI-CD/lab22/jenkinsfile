            steps {
                // Ø¨Ù†Ø§Ø¡ Ø§Ù„ØªØ·Ø¨ÙŠÙ‚ ÙˆØªØ®Ø·ÙŠ Ø§Ù„Ø§Ø®ØªØ¨Ø§Ø±Ø§Øª Ù„Ø£Ù†Ù†Ø§ Ù†ÙØ°Ù†Ø§Ù‡Ø§ Ø¨Ø§Ù„ÙØ¹Ù„
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('4. Build Docker image') {
            steps {
                // Ø¨Ù†Ø§Ø¡ Ø§Ù„ØµÙˆØ±Ø© Ù…Ù† Ø§Ù„Ù€ Dockerfile Ø§Ù„Ù…ÙˆØ¬ÙˆØ¯ ÙÙŠ Ø§Ù„Ù…Ø³ØªÙˆØ¯Ø¹
                sh "docker build -t ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }

        stage('5. Push image to Docker hub') {
            steps {
                script {
                    // ØªØ³Ø¬ÙŠÙ„ Ø§Ù„Ø¯Ø®ÙˆÙ„ ÙˆØ±ÙØ¹ Ø§Ù„ØµÙˆØ±Ø© Ø¨Ø§Ø³ØªØ®Ø¯Ø§Ù… Ø§Ù„Ù€ Credentials Ø§Ù„Ù…Ø®Ø²Ù†Ø©
                    withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDS_ID}", passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                        sh "echo ${PASS} | docker login -u ${USER} --password-stdin"
                        sh "docker push ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
                    }
                }
            }
        }

        stage('6. Delete image locally') {
            steps {
                // Ù…Ø³Ø­ Ø§Ù„ØµÙˆØ±Ø© Ù…Ù† Ø§Ù„Ø³ÙŠØ±ÙØ± Ù„ØªÙˆÙÙŠØ± Ø§Ù„Ù…Ø³Ø§Ø­Ø©
                sh "docker rmi ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
            }
        }

        stage('7. Edit deployment.yaml') {
            steps {
                // ØªØ­Ø¯ÙŠØ« Ù…Ù„Ù Ø§Ù„Ù€ YAML Ø¨Ø§Ù„Ù€ Tag Ø§Ù„Ø¬Ø¯ÙŠØ¯ ØªÙ„Ù‚Ø§Ø¦ÙŠØ§Ù‹
                sh "sed -i 's|image: .*|image: ${DOCKER_HUB_USER}/${IMAGE_NAME}:${IMAGE_TAG}|g' deployment.yaml"
            }
        }

        stage('8. Deploy to k8s cluster') {
            steps {
                // ØªØ·Ø¨ÙŠÙ‚ Ø§Ù„ØªØ¹Ø¯ÙŠÙ„Ø§Øª Ø¹Ù„Ù‰ Kubernetes
                sh "kubectl apply -f deployment.yaml"
            }
        }
    }

    // Ø§Ù„Ø¥Ø¬Ø±Ø§Ø¡Ø§Øª Ø§Ù„Ù†Ù‡Ø§Ø¦ÙŠØ© (Post Actions)
    post {
        always {
            echo 'ØªÙ… Ø§Ù„Ø§Ù†ØªÙ‡Ø§Ø¡ Ù…Ù† ØªÙ†ÙÙŠØ° Ø§Ù„Ù€ Pipeline.'
        }
